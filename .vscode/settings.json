{
	"files.exclude": {
		"**/.next": false,
		"**/.vscode": false,
		"**/node_modules": false,
		"coverage": false
	},
	"editor.formatOnSave": true,
	"conventionalCommits.scopes": ["styles", "vscode", "linters"],
	"editor.codeActionsOnSave": {
		"source.fixAll": true,
		"source.fixAll.stylelint": false
	},
	"stylelint.syntax": "css-in-js"
}
